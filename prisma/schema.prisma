generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ================================================
// USER MANAGEMENT MODELS - ERWEITERT
// ================================================

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  username    String?  @unique
  name        String?
  password    String   // Required fÃ¼r Login
  role        UserRole @default(FAN)
  image       String?
  verified    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Access Control - Automatisch gesetzt basierend auf UserRole & Tickets
  hasVIPAccess      Boolean @default(false)      // VIP Ticket oder BAND Role
  hasPremiumAccess  Boolean @default(false)      // Standard/VIP Ticket oder BAND Role  
  hasBackstageAccess Boolean @default(false)     // VIP Ticket oder BAND Role
  hasFullAccess     Boolean @default(false)      // Nur fÃ¼r BAND Role - uneingeschrÃ¤nkter Zugang
  canBuyTickets     Boolean @default(true)       // FANs kÃ¶nnen Tickets kaufen, BANDs nicht nÃ¶tig
  
  // Relations
  accounts    Account[]
  sessions    Session[]
  bandProfile BandProfile?
  tickets     Ticket[]
  chatMessages ChatMessage[]
  apiTokens   ApiToken[]
  
  // Contact Message Relations
  assignedMessages  ContactMessage[] @relation("AssignedMessages")
  respondedMessages ContactMessage[] @relation("RespondedMessages")
  contactReplies    ContactReply[]   @relation("AdminReplies")
  
  @@map("users")
}

enum UserRole {
  FAN           // Normale Fans/Users - Brauchen Tickets fÃ¼r Backstage & Stadion Arena
  BAND          // Band Members - Ãœberall freier Zugang, KEIN Zugang zu ComingSoonPage
  VIP_FAN       // VIP Fans - Premium Access durch VIP Ticket
  BENEFIZ       // Benefiz Users - Freier Zugang zu allen RÃ¤umen/Arenen, KEIN Zugang zu ComingSoonPage
  ADMIN         // Platform Admins
  MODERATOR     // Community Moderators
}

// ================================================
// NEXTAUTH.JS REQUIRED MODELS
// ================================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

// ================================================
// API AUTHENTICATION - SECURITY FIX [11/12]
// ================================================

model ApiToken {
  id           String    @id @default(cuid())
  name         String
  hashedToken  String    @unique
  prefix       String
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  permissions  String[]
  expiresAt    DateTime?
  lastUsedAt   DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([userId])
  @@index([hashedToken])
  @@map("api_tokens")
}

// ================================================
// BAND MANAGEMENT MODELS
// ================================================

model Band {
  id              String       @id @default(cuid())
  name            String       @unique
  description     String?      @db.Text
  genre           String?
  foundedYear     Int?
  website         String?
  youtubeChannel  String?
  spotifyUrl      String?
  instagramUrl    String?
  facebookUrl     String?
  image           String?
  verified        Boolean      @default(false)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  // Relations
  bandProfile     BandProfile?
  events          Event[]
  albums          Album[]
  gallery         Gallery[]
  
  @@map("bands")
}

model BandProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  bandId          String   @unique
  role            String?  // Lead Singer, Guitarist, etc.
  joinedDate      DateTime @default(now())
  
  // Relations
  user            User     @relation(fields: [userId], references: [id])
  band            Band     @relation(fields: [bandId], references: [id])
  
  @@map("band_profiles")
}

// ================================================
// EVENT MANAGEMENT MODELS
// ================================================

model Event {
  id              String      @id @default(cuid())
  title           String
  description     String?     @db.Text
  startDate       DateTime
  endDate         DateTime?
  venue           String
  city            String
  country         String
  maxCapacity     Int?
  
  // Ticket Pricing
  basicTicketPrice    Decimal?
  standardTicketPrice Decimal?
  vipTicketPrice      Decimal?
  
  youtubeUrl      String?
  status          EventStatus @default(UPCOMING)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  // Relations
  band            Band        @relation(fields: [bandId], references: [id])
  bandId          String
  tickets         Ticket[]
  gallery         Gallery[]
  
  @@map("events")
}

enum EventStatus {
  UPCOMING
  LIVE
  COMPLETED
  CANCELLED
}

// ================================================
// ENHANCED TICKETING SYSTEM MODELS
// ================================================

model Ticket {
  id              String       @id @default(cuid())
  ticketNumber    String       @unique
  type            TicketType
  price           Decimal
  status          TicketStatus @default(ACTIVE)
  qrCode          String?
  // pdfUrl          String?      // ðŸ“„ PDF Ticket URL for download - Disabled for now
  purchaseDate    DateTime     @default(now())
  
  // Access Rights basierend auf deine Ticket-Anforderungen
  allowsBasicAccess     Boolean @default(false)  // Nur bei BASIC Ticket
  allowsConcertAccess   Boolean @default(true)   // Alle Ticket Types haben Konzert-Zugang
  allowsPremiumAccess   Boolean @default(false)  // STANDARD + VIP_FANS Tickets
  allowsVIPAccess       Boolean @default(false)  // Nur VIP_FANS Tickets
  allowsBackstageAccess Boolean @default(false)  // Nur VIP_FANS Tickets
  
  // Relations
  user            User         @relation(fields: [userId], references: [id])
  userId          String
  event           Event        @relation(fields: [eventId], references: [id])
  eventId         String
  payments        Payment[]
  
  @@map("tickets")
}

enum TicketType {
  STANDARD    // Standard Ticket - Zugang zu Stadion Arena
  VIP         // VIP Ticket - Erweiterte Bereiche
  BACKSTAGE   // Backstage Ticket - Vollzugang inkl. Backstage Bereich
  BAND_PASS   // FÃ¼r Band Members - Full Access (automatisch bei BAND Role)
  ADMIN_PASS  // FÃ¼r Platform Admins
}

enum TicketStatus {
  ACTIVE
  USED
  CANCELLED
  REFUNDED
}

// ================================================
// ACCESS CONTROL SYSTEM - DEINE ANFORDERUNGEN
// ================================================

// ðŸŽ¸ BAND ACCOUNTS:
// - Nach Account-Erstellung: VOLLZUGANG zu ALLEN Bereichen
// - VIP, Premium, Konzert, Backstage automatisch verfÃ¼gbar
// - Role: BAND, hasFullAccess: true

// ðŸŽ« FAN TICKET SYSTEM:
// - BASIC TICKET: Nur Konzert-Zugang
// - STANDARD TICKET: Konzert + Premium Bereich
// - VIP_FANS TICKET: VOLLZUGANG wie BAND (VIP + Premium + Konzert + Backstage)

// ================================================
// ACCESS CONTROL MODEL
// ================================================

model AccessLevel {
  id              String   @id @default(cuid())
  name            String   @unique
  description     String?
  
  // Access Permissions
  allowsConcert   Boolean  @default(false)
  allowsPremium   Boolean  @default(false)
  allowsVIP       Boolean  @default(false)
  allowsBackstage Boolean  @default(false)
  allowsAdmin     Boolean  @default(false)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("access_levels")
}

// ================================================
// MEDIA & CONTENT MODELS
// ================================================

model Album {
  id          String     @id @default(cuid())
  title       String
  releaseDate DateTime?
  coverImage  String?
  spotifyUrl  String?
  youtubeUrl  String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  // Relations
  band        Band       @relation(fields: [bandId], references: [id])
  bandId      String
  tracks      Track[]
  
  @@map("albums")
}

model Track {
  id          String   @id @default(cuid())
  title       String
  duration    Int?     // in seconds
  trackNumber Int
  youtubeUrl  String?
  spotifyUrl  String?
  
  // Relations
  album       Album    @relation(fields: [albumId], references: [id])
  albumId     String
  
  @@map("tracks")
}

model Gallery {
  id          String      @id @default(cuid())
  title       String?
  type        MediaType
  url         String
  description String?
  uploadedAt  DateTime    @default(now())
  
  // Relations
  event       Event?      @relation(fields: [eventId], references: [id])
  eventId     String?
  band        Band?       @relation(fields: [bandId], references: [id])
  bandId      String?
  
  @@map("gallery")
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
}

// ================================================
// COMMUNICATION SYSTEM MODELS
// ================================================

model ChatMessage {
  id        String      @id @default(cuid())
  content   String      @db.Text
  room      ChatRoom
  sentAt    DateTime    @default(now())
  
  // Relations
  user      User        @relation(fields: [userId], references: [id])
  userId    String
  
  @@map("chat_messages")
}

enum ChatRoom {
  COMMUNITY
  BACKSTAGE
  VIP_LOUNGE
  PREMIUM
  SUPPORT
}

// ================================================
// PLATFORM STATISTICS MODELS
// ================================================

model PlatformStats {
  id              String   @id @default(cuid())
  date            DateTime @default(now())
  totalUsers      Int      @default(0)
  totalBands      Int      @default(0)
  totalEvents     Int      @default(0)
  totalTickets    Int      @default(0)
  dailyRevenue    Decimal  @default(0)
  
  @@map("platform_stats")
}

// ================================================
// PAYMENT SYSTEM MODEL
// ================================================

model Payment {
  id                String        @id @default(cuid())
  amount            Decimal
  currency          String        @default("EUR")
  status            PaymentStatus @default(PENDING)
  stripeId          String?
  // stripeSessionId   String?       // ðŸ’³ Stripe Checkout Session ID - Disabled for now
  description       String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  // Relations
  ticketId          String
  ticket            Ticket        @relation(fields: [ticketId], references: [id])
  
  @@map("payments")
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// ================================================
// CONTACT MESSAGES MODEL - GDPR COMPLIANT
// ================================================

model ContactMessage {
  id              String            @id @default(cuid())
  name            String            // Nicht verschlÃ¼sselt fÃ¼r Admin-Ansicht
  email           String            // Email fÃ¼r Antworten
  subject         String
  message         String            @db.Text
  status          ContactStatus     @default(NEW)
  priority        MessagePriority   @default(NORMAL)
  ipAddress       String?           // Anonymisiert (letzte Oktette entfernt)
  userAgent       String?           @db.Text
  isSpam          Boolean           @default(false)
  
  // Ticket-System
  assignedToId    String?           // Zugewiesener Admin/Support
  assignedTo      User?             @relation("AssignedMessages", fields: [assignedToId], references: [id], onDelete: SetNull)
  respondedAt     DateTime?
  respondedById   String?           // Admin ID der geantwortet hat
  respondedBy     User?             @relation("RespondedMessages", fields: [respondedById], references: [id], onDelete: SetNull)
  
  // Timestamps
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  closedAt        DateTime?
  
  // GDPR Compliance
  gdprConsent     Boolean           @default(true)  // User muss zustimmen
  dataRetention   DateTime          // Auto-delete nach 90 Tagen
  
  // Relations
  replies         ContactReply[]
  
  @@index([email])
  @@index([status])
  @@index([priority])
  @@index([assignedToId])
  @@index([createdAt])
  @@index([dataRetention])
  @@map("contact_messages")
}

model ContactReply {
  id              String            @id @default(cuid())
  messageId       String
  message         ContactMessage    @relation(fields: [messageId], references: [id], onDelete: Cascade)
  content         String            @db.Text
  isInternal      Boolean           @default(false) // Interne Notiz oder Antwort an User
  sentByEmail     Boolean           @default(false) // Wurde per E-Mail versendet
  
  // Admin Info
  adminId         String
  admin           User              @relation("AdminReplies", fields: [adminId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime          @default(now())
  
  @@index([messageId])
  @@index([adminId])
  @@index([createdAt])
  @@map("contact_replies")
}

enum MessagePriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum ContactStatus {
  NEW           // Neue Nachricht
  READ          // Gelesen
  IN_PROGRESS   // In Bearbeitung
  RESPONDED     // Beantwortet
  CLOSED        // Abgeschlossen
  SPAM          // Als Spam markiert
}



